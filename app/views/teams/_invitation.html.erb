<% @invitation = Invitation.new %>
<% if @team.members.include?(current_user) %>
<div style="display:inline-block;">
<%= simple_form_for(@invitation, remote: true) do |f| %>
  <% @game = current_user.account.game %>
  <div class="input-group" style="display:inline-block;width:200px;">
    <input type="text" class="form-control" placeholder="<%=t 'layout.invite_friend' %>" name="friend" id="team_friend" style="width:150px;">
    <span class="input-group-btn" style="display:inline-block;margin-left:-3px;">
      <button type="submit" class="btn btn-default" style="padding:7px 12px 8px;margin-top:-2px;">
        <i class='fa fa-plus'></i>
      </button>
    </span>
  </div>
<%= hidden_field_tag(:type, "team") %>
<%= hidden_field_tag(:role, role) %>
<%= hidden_field_tag(:num_role, num_role) %>
<%= hidden_field_tag(:asker, current_user.id) %>
<% end %>
</div>
<div id="notice-team-<%= num_role.to_s %>" style="padding:0px;font-size:12px;display:inline-block;"></div>
<% end %>
