<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

	<h4>Titre</h4>
  	<label for="inputTitle" class="sr-only">Titre</label>
  	<%= f.text_field :title%>

  	<h4>Article</h4>
  	<label for="inputBody" class="sr-only">Corps de l'Article</label>
    <%= f.cktext_area :body, id: 'edit'%>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


  