<style type="text/css">
  select { width: 90px; }
</style>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Fits</h3>
    </div>
    <div class="panel-body">
      <%= search_form_for @search, method: :get, remote: true do |f| %>
      <div class="panel panel-default" style="padding:5px 30px;position:relative;margin:0 auto;width:100%;">
        <div class="row">
            <div class="col-sm-2">
              <%= f.search_field :account_name_cont, placeholder:"Invocateur", class:"form-control" %>
            </div>
            <div class="col-sm-2">
              <%= f.search_field :team_name_cont, placeholder:"Team", class:"form-control" %>
            </div>
            <div class="col-sm-2">
              <%= f.search_field :created_at_date_equals, placeholder:"dd-mm-yyyy",class:"form-control" %>
            </div>
            <div class="col-sm-4 text-center" style="padding-top:5px;">
              <%= f.select :account_game_id_eq, options_from_collection_for_select(Game.all, :id, :title, @search.account_game_id_eq), prompt:"-- Jeu --" %>
              <%= f.select :account_p_role_cont, ["Toplaner", "Jungler", "Midlaner", "Adcarry", "Support", "Tank", "DPS", "Support", "Flex"], prompt:"-- RÃ´le --" %>
              <%= f.select :account_tier_or_account_flex_tier_cont, ["Diamond", "Platinum", "Gold", "Silver", "Bronze", "Unranked"], prompt:"-- Rang --" %>
            </div>
            <div class="col-sm-2 text-center" style="padding-top:5px;">
              <%= f.submit %>
              <%= link_to "Reset", teamings_path, class:"btn btn-basic", style:"margin-left:5px;" %>
            </div>
        </div>
      </div>
      <% end %>
      <hr>
      <div id="index">
        <%= render 'teamings/index' %>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-sm-3" style="margin-top:10px;">
          <%= link_to "Retour", admin_panel_path, class:"btn btn-default" %>
        </div>
        <div id="teamings-paginate" class="col-sm-6 text-center">
          <%= render 'teamings/pagination' %>
        </div>
        <div class="col-sm-3"></div>
      </div>
    </div>
  </div>
</div>
