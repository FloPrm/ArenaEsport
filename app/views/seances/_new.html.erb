<style type="text/css">
  .field textarea {
    width: 70%;
    height: 150px;
  }

  #title input { width: 50%; margin:0 auto; text-align: center;}
</style>

<%= simple_form_for(@seance) do |f| %>
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h3 class="modal-title text-center" id="myModalLabel"><%=t 'seances.new' %></h3>
    </div>
    <div class="modal-body text-center">

      <div id="title" class="field">
        <h4><%=t 'layout.title' %></h4>
        <input type="text" class="form-control" name="seance[title]" id="seance_title" maxlength="45" autofocus>
      </div>

      <div class="row" style="margin:50px 0px;">
        <div class="col-sm-4">
          <h4><%=t 'layout.date' %></h4>
          <%= f.input :date, as: :date, :order => [:day, :month, :year], :required => true, label: false %>
          <div class="box-info" style="margin-top:10px;"><i class="fa fa-info-circle"></i> <%=t 'seances.date_explain' %></div>
        </div>
        <div class="col-sm-4">
          <h4><%=t 'layout.hour' %></h4>
          <%= f.input :hour, as: :time, label: false %>
        </div>
        <div class="col-sm-4">
          <h4><%=t 'layout.duration' %></h4>
          <%= f.input :duration, as: :select, collection: Seance::DURATION, label: false, include_blank: false %>
        </div>
      </div>

      <div class="field">
        <h4><%=t 'seances.content' %></h4>
        <%= f.input :content, as: :ckeditor, input_html: { ckeditor: { toolbar: 'mini' } }, label: false, maxlength: @content_length %>
        <span id="content_status" data-maximum-length="<%= @content_length %>" class="explain" style="font-size:14px;"></span>
      </div>

      <%= hidden_field_tag(:mentorat, params[:mentorat]) %>

    </div>
    <div class="modal-footer" style="text-align:center;">
      <%= submit_tag "#{t 'btn.create'}", data: { disable_with: "#{t 'btn.sending'}" }, class: "btn btn-primary"%>
      <button type="button" class="btn btn-default" data-dismiss="modal"><%=t 'btn.close' %></button>
    </div>
  </div>
</div>
<% end %>

<script type="text/javascript">
$(document).ready(function(){
  var status1 = $('#content_status');
  var maxLen1 = status1.data("maximum-length");
  var editor1 = CKEDITOR.instances.seance_content;

  status1.text(maxLen1 + " caractères restants")

  editor1.on('key', function(event) {
    var characters1 = this.getData().length;

    status1.text(maxLen1 - characters1+' caractères restants');

    // Applique un style CSS au texte du span 'status' si la limite est dépassée

    if(maxLen1 < characters1) {
      status1.css('color','red');
    }
    else {
      status1.css('color','black')
    }
  });
});
</script>
