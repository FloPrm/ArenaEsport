<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Abonnements</h3>
    </div>
    <div class="panel-body">
      <%= search_form_for @search, url: subscriptions_path, method: :get, remote: true do |f| %>
      <div id="subscription-search-form" class="panel panel-default" style="padding:5px 30px;position:relative;margin:0 auto;">
        <div class="row">
            <div class="col-xs-3">
              <%= f.search_field :account_name_cont, placeholder:"Joueur", class:"form-control" %>
            </div>
            <div class="col-xs-5" style="padding-top:5px;">
              <%= f.select :subscription_plan_id_eq, options_from_collection_for_select(SubscriptionPlan.all, :id, :title, @search.subscription_plan_id_eq), prompt:"-- Plan --" %>
              <%= f.select :active_eq, {"Actif" => true, "Inactif" => false}, prompt:"-- Etat --" %>
              <%= f.select :payment_method_eq, {"Paypal" => "paypal", "Gems" => "gems"}, prompt:"-- Paiement --" %>
            </div>
            <div class="col-xs-4 text-right" style="padding-top:5px;">
              <%= f.submit %>
              <%= link_to "Reset", subscriptions_path, class:"btn btn-basic", style:"margin-left:5px;" %>
            </div>
        </div>
      </div>
      <% end %>
      <hr>
      <div id="index">
        <%= render 'subscriptions/index' %>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-sm-3" style="padding-top:10px;">
          <%= link_to "Retour", admin_panel_path, class:"btn btn-default" %>
        </div>
        <div id="subscriptions-paginate" class="col-sm-6 text-center">
          <%= render 'subscriptions/pagination' %>
        </div>
      </div>
    </div>
  </div>
</div>
