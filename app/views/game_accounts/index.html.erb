<section>
<h1>Listing Game Accounts</h1>

<table style="width: 70%;">
  <thead>
    <tr>
      <th>Nom d'invoc</th>
      <th>Utilisateur lié</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_accounts.each do |game_account| %>
      <tr>
        <td><%=game_account.name%></td>
        <% if game_account.user != nil %>
        <td><%=game_account.user.user_name%></td>
        <% else %>
        <td>-</td>
        <% end %>
        <td><%= link_to 'Voir', game_account %></td>
        <td><%= link_to 'Modifier', edit_game_account_path(game_account) %></td>
        <td><%= link_to 'Supprimer', game_account, method: :delete, data: { confirm: 'Vous êtes sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un compte', new_game_account_path %>
</section>
