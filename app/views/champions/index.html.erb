<style type="text/css">

</style>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Champions</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-8">
          <%= render 'champions/new' %>
        </div>
        <div class="col-sm-4">
          <%= search_form_for @search do |f|%>
          <div class="field">
            <%= f.text_field :name_cont, placeholder: "Nom contient", style:"text-transform:lowercase;", id:"search" %>
            <%= f.submit "Chercher" %>
          </div>
          <% end %>
        </div>
      </div>
      <div id="champions">
        <%= render 'champions/index' %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
	$('#search').autocomplete({
		source: "/search_suggestions"
	});
});
</script>
