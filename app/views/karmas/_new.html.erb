<style type="text/css">
  #new-karma input {
    text-align: center;
  }
  #new_karma textarea {
    padding: 5px;
    width: 80%;
    height: 100px;
    margin: 0 auto;
  }
</style>

<%= simple_form_for(@karma, remote: true) do |f| %>
<div id="new-karma" class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h3 class="modal-title text-center" id="myModalLabel">Karma</h3>
    </div>
    <div class="modal-body text-center">

      <p><%=raw t 'karmas.why', karma: params[:vote].to_i > 0 ? "+1" : "-1" %></p>
      <%= f.input :comment, as: :text, label: false, autofocus: true %>

      <%= f.hidden_field :vote, value: params[:vote] %>
      <%= f.hidden_field :voter_id, value: params[:voter_id] %>
      <%= f.hidden_field :voted_id, value: params[:voted_id] %>
    </div>
    <div class="modal-footer" style="text-align:center;">
      <%= submit_tag "#{t 'btn.confirm'}", data: { disable_with: "#{t 'btn.sending'}" }, class: "btn btn-primary"%>
      <button type="button" class="btn btn-default" data-dismiss="modal"><%=t 'btn.close' %></button>
    </div>
  </div>
</div>
<% end %>
